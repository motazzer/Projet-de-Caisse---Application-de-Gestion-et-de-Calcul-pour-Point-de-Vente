<html lang='en'>

<head>
	<meta charset='UTF-8' />
	<title>Product Management</title>
	<link rel='stylesheet' href='/css/modifyProduct.css' />
</head>

<body>
	<header>
		<nav>
			<ul>
				<li><a href='/products'>Produits</a></li>
				{{#if isAdmin}}
				<li><a href='/transaction'>Transactions</a></li>
				<li><a href='/recipe'>Recettes</a></li>
				<li> <a href='/recipe/verify'> Verifier Recette </a></li>
				<li><a href=' /user'>Utilisateurs</a></li>
				{{/if}}
				{{#if isAuth}}
				<li><a href='/logout' class='right-link'>logout</a></li>
				{{else}}
				<li><a href='/login'>Se connecter</a></li>
				<li><a href='/signup'>S'inscrire</a></li>
				{{/if}}
			</ul>
		</nav>
	</header>
	<div class='container'>
		<div class='brand'>
			<h2>Modifier Produit</h2>
		</div>
		<div class='wrapper'>
			<div class='company-info'>
				<h3>Modifier Produit</h3>
				<form id='product-form' method='post'>
					<input type='hidden' name='_method' value='PUT' />
					<label for='id'>Anceienne ID</label><br />
					<input type='number' id='Oldid' name='oldId' required />
					<br />
					<label for='id'>ID</label><br />
					<input type='number' id='id' name='id' class="ID" />
					<br />
					<label for='name'>Nom</label><br />
					<input type='text' id='name' name='name' />
					<br />
					<label for='category'>Categorie</label><br />
					<input type='text' id='category' name='category' />
					<br />
					<label for='price'>Prix</label><br />
					<input type='number' step='0.05' id='price' name='price' />
					<br />
					<label for='quantity'>Quantite</label><br />
					<input type='number' id='quantity' name='quantity' />
					<br />
					<button type='submit' id='add-product-btn'>Ajouter produits</button>
				</form>
			</div>
			<div class='contact'>
				<h3>Liste Produits</h3>
				<table id='product-table'>
					<thead>
						<tr>
							<th>ID</th>
							<th>Nom</th>
							<th>Categorie</th>
							<th>Prix</th>
							<th>Quantite</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>

						{{#each productsList}}
						<tr>
							<td>{{id}}</td>
							<td>{{name}}</td>
							<td>{{category}}</td>
							<td>{{price}}</td>
							<td>{{quantity}}</td>
							<td><button onclick='deleteProduct({{id}})'>Effacer</button></td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<script src='/index.js'></script>
</body>

</html>