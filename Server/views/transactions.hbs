<html>

<head>
	<meta charset='utf-8' />
	<title>Liste des Transactions</title>
	<link rel='stylesheet' href='/css/transactions.css' />

</head>

<body>
	<header>
		<nav>
			<ul>
				<li><a href='/products'>Produits</a></li>
				{{#if isAdmin}}
				<li><a href='/transaction'>Transactions</a></li>
				<li><a href='/recipe'>Recettes</a></li>
				<li> <a href='/recipe/verify'> Verifier Recette </a></li>
				<li><a href=' /user'>Utilisateurs</a></li>
				{{/if}}
				{{#if isAuth}}
				<li><a href='/logout' class='right-link'>logout</a></li>
				{{else}}
				<li><a href='/login'>Se connecter</a></li>
				<li><a href='/signup'>S'inscrire</a></li>
				{{/if}}
			</ul>
		</nav>
	</header>
	<h1>Liste des Transactions</h1>
	<table>
		<thead>
			<tr>
				<th>Date et Heure</th>
				<th>Totale</th>
			</tr>
		</thead>
		<tbody>
			{{#each transactionsList}}
			<tr>
				<td><a href='{{id}}'>{{id}}</a></td>
				<td>{{total}}</td>
			</tr>
			{{/each}}
		</tbody>
		<tfoot>
			<tr>
				<td>Totale</td>
				<td>{{recipeTotal}}</td>
			</tr>
		</tfoot>
	</table>
</body>

</html>